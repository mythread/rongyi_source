<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators
    PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
    "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>    
    <field name="username">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
			<message>${getText("errors.required", {getText("login.username.label")})}</message>
        </field-validator>
    </field>
    <field name="email">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
			<message>${getText("errors.required", {getText("entity.email.label")})}</message>
        </field-validator>
    </field>    
</validators>
